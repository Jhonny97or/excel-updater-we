{
  "version": 2,
  "builds": [
    { "src": "api/process.py", "use": "@vercel/python", "config": { "runtime": "python3.9" } },
    { "src": "public/**/*",   "use": "@vercel/static"  }
  ],
  "routes": [
    { "src": "/api/process", "dest": "api/process.py" },
    { "src": "/(.*)",        "dest": "/public/index.html" }
  ]
}
